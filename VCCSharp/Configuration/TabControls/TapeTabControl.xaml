<UserControl x:Class="VCCSharp.Configuration.TabControls.TapeTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VCCSharp.Configuration"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <StackPanel Orientation="Vertical">
    <StackPanel Orientation="Horizontal">
      <TextBox>Sample Browse File Text</TextBox>
      <Button>Browse</Button>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
      <Button>Record</Button>
      <Button>Play</Button>
      <Button>Stop</Button>
      <Button>Eject</Button>
      <Button>Rewind</Button>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
      <StackPanel Orientation="Vertical">
        <Label BorderThickness="1" BorderBrush="Black">(mode)</Label>
        <Label>Mode</Label>
      </StackPanel>
      <StackPanel Orientation="Vertical">
        <Label BorderThickness="1" BorderBrush="Black">(counter)</Label>
        <Label>Counter</Label>
      </StackPanel>
    </StackPanel>
    <Label Content="Tape content goes here..." />
  </StackPanel>
</UserControl>
