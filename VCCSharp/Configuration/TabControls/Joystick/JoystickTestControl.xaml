<UserControl x:Class="VCCSharp.Configuration.TabControls.Joystick.JoystickTestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:joystick="clr-namespace:VCCSharp.Configuration.TabControls.Joystick"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">

    <StackPanel>
        <Canvas>
            <joystick:StickControl Canvas.Left="11" Canvas.Top="50" DataContext="{Binding}"/>

            <joystick:ButtonsControl DataContext="{Binding}"/>
        </Canvas>
    </StackPanel>
</UserControl>
