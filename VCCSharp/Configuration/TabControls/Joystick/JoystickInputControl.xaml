<UserControl x:Class="VCCSharp.Configuration.TabControls.Joystick.JoystickInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VCCSharp.Configuration.TabControls.Joystick"
             xmlns:controls="clr-namespace:VCCSharp.Configuration.TabControls.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:JoystickViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <DockPanel>
        <Border DockPanel.Dock="Top" >
            <controls:JoystickEmulationControl 
                DataContext="{Binding }"/>
        </Border>
        <Border>
            <controls:JoystickSourceControl 
                DataContext="{Binding }"/>
        </Border>
    </DockPanel>
</UserControl>
