<UserControl x:Class="DX8.Tester.Controls.JoystickControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DX8.Tester.Controls"
             xmlns:model="clr-namespace:DX8.Tester.Model"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <UserControl.DataContext>
        <model:JoystickStateViewModel/>
    </UserControl.DataContext>

    <StackPanel>
        <Canvas>
            <local:StickControl Canvas.Left="11" Canvas.Top="50" DataContext="{Binding}"/>

            <local:ButtonsControl DataContext="{Binding}"/>
        </Canvas>
    </StackPanel>
</UserControl>
