<UserControl x:Class="DX8.Tester.Controls.JoystickConfigurationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:DX8.Tester.Controls"
             xmlns:model="clr-namespace:DX8.Tester.Model"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
  <UserControl.DataContext>
    <model:JoystickConfigurationViewModel/>
  </UserControl.DataContext>

  <Grid>
    <controls:JoystickSourceControl DataContext="{Binding JoystickSource}"/>
  </Grid>
</UserControl>
