<UserControl x:Class="DX8.Tester.Controls.JoystickPairControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DX8.Tester.Controls"
             xmlns:tester="clr-namespace:DX8.Tester"
             mc:Ignorable="d" 
             d:DesignHeight="420" d:DesignWidth="475">
  <UserControl.DataContext>
    <tester:TestWindowViewModel/>
  </UserControl.DataContext>
  <UserControl.Resources>
    <Style TargetType="{x:Type local:JoystickControl}">
      <Setter Property="Height" Value="200" />
    </Style>
  </UserControl.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <DockPanel Grid.Row="0">
      <Label DockPanel.Dock="Top">First Joystick:</Label>
      <Separator DockPanel.Dock="Bottom"/>
      <local:JoystickControl DataContext="{Binding LeftJoystick}"/>
    </DockPanel>

    <DockPanel Grid.Row="1">
      <Label DockPanel.Dock="Top">Second Joystick:</Label>
      <Separator DockPanel.Dock="Bottom"/>
      <local:JoystickControl DataContext="{Binding RightJoystick}"/>
    </DockPanel>
  </Grid>
</UserControl>
