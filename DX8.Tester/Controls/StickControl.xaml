<UserControl x:Class="DX8.Tester.Controls.StickControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:model="clr-namespace:DX8.Tester.Model"
             xmlns:converters="clr-namespace:DX8.Tester.Converters"
             xmlns:shared="clr-namespace:VCCSharp.Shared.Converters;assembly=VCCSharp.Shared"
             mc:Ignorable="d" 
             d:DesignHeight="128" d:DesignWidth="128">
    <UserControl.DataContext>
        <model:JoystickStateViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <shared:JoystickAxisToTextConverter x:Key="JoystickAxisToTextConverter"/>
        <shared:AxisScaleConverter x:Key="AxisScaleConverter"/>
    </UserControl.Resources>

    <Border BorderBrush="Black" BorderThickness="2" Width="128" Height="128">
        <Canvas>
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="{Binding Joystick, Converter={StaticResource JoystickAxisToTextConverter}}"></Label>
                </StackPanel>
            </StackPanel>
            <Ellipse Width="4" Height="4" Fill="Orange" 
                     Canvas.Left="{Binding Joystick.Horizontal, Converter={StaticResource AxisScaleConverter}}" 
                     Canvas.Top="{Binding Joystick.Vertical, Converter={StaticResource AxisScaleConverter}}"/>
        </Canvas>
    </Border>
</UserControl>
